#listTree
  font-family: 'Arial','Helvetica Neue',helvetica,sans-serif
  font-size: 13px

  ul
    margin: 0
    padding: 0

  li.section
    span
      padding-left: 10px
      font-weight: 600
      border-top: 1px solid #D0D0D0
    i
      float: right
      margin: 3px 5px 0 0
      font-size: 10px

  li.page
    display: inline-block
    width: 100%
    padding: 3px
    font-weight: 400
    padding-left: 15px
    i
      float: left
      margin: 3px 5px 0 0
      color: green

  li
    list-style-type: none
    cursor: pointer

  & > ul > li
    background-color: #F1F1F1
    span i.fa
      color: gray

  span
    display: inline-block
    width: 100%
    padding: 3px

  //- span.page a
  //-   color: #000
  //-   text-decoration: none

  & > ul > li > ul > li
    background-color: #fff
    border-width: 1px 0 0 0
    border-style: solid
    border-color: #ddd
    padding-left: 10px

  & > ul > li > ul > li:first-child
    border-width: 1px 0 0 0

  & > ul > li > ul > li:last-child
    border-width: 1px 0 0 0

strong
  //- font-family: 'Helvetica Neue', Arial helvetica, sans-serif
  font-weight: 700

#page code, kbd, pre, samp
    font-size: 12px !important